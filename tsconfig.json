{
  "compilerOptions": {
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": [
        "esnext"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "pretty": true,
      "removeComments": true,
      "sourceMap": true,
      "suppressImplicitAnyIndexErrors": true,
      "target": "es2016",
      "allowJs": true,
      "outDir": "dist",
      "baseUrl": ".",
      "skipLibCheck": true
  },
  "include": [
      "src/**/*",
      "test/**/*"
  ]
}
